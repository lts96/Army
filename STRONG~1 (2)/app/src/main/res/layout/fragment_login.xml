<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              tools:context=".Application.fragment.LoginFrag" android:paddingHorizontal="20dp">
    <ImageView android:layout_width="282dp"
               android:src="@drawable/title"
               android:layout_height="wrap_content" android:paddingBottom="20dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:paddingBottom="30dp"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="80dp"
                  android:text="아이디"
                  android:padding="10dp"
                  android:layout_height="match_parent" android:textStyle="bold" android:textColor="#343030"/>
        <EditText android:layout_width="match_parent"
                  android:id="@+id/loginId"
                  android:padding="10dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:paddingBottom="30dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="80dp"
                  android:text="비밀번호"
                  android:padding="10dp"
                  android:layout_height="match_parent" android:textColor="#343030" android:textStyle="bold"/>
        <EditText android:layout_width="match_parent"
                  android:id="@+id/loginPw"
                  android:padding="10dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button android:layout_width="match_parent"
            android:id="@+id/loginButton"
            android:text="로그인"

            android:layout_height="60dp" android:backgroundTint="#EFEFE8" android:textStyle="bold"
            android:textColor="#817B7B" android:textSize="16sp"/>
    <Button android:layout_width="match_parent"
            android:id="@+id/loginToSelect"

            android:text="처음으로"
            android:layout_height="60dp" android:textStyle="bold" android:textColor="#343030" android:textSize="16sp"/>
</LinearLayout>