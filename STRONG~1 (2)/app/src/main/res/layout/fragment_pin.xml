<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingHorizontal="40dp"
              android:layout_gravity="center"
              android:gravity="center"
              tools:context=".Application.fragment.PinFrag">
    <ImageView android:layout_width="match_parent"
               android:src="@drawable/title_color"
               android:layout_height="102dp"/>
    <EditText android:layout_width="match_parent"
              android:textSize="18sp"
              android:gravity="center"
              android:hint="핀을 입력하세요"
              android:layout_height="wrap_content" android:id="@+id/pinEdit"/>
    <Button
            android:text="입장"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/pinButton" android:background="#EFEFE8"
            android:textSize="16sp" android:textStyle="bold" android:textColor="#817B7B"/>
</LinearLayout>